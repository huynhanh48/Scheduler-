{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2023",
    "outDir": "./dist",
    "rootDir": "./", // Changed from ./src to ./
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "generated/*": [
        "generated/*"
      ] // Added this for cleaner imports
    }
  },
  "include": [
    "src/**/*.ts",
    "generated/**/*.ts" // Added this so tsc sees the prisma files
  ]
}