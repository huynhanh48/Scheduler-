generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

enum PRIORITY {
  LOW
  MEDIUM
  HIGH
}

enum STATUS {
  COMPLETED
  UNCOMPLETED
  CANCEL
}

model User {
  id         Int         @id @default(autoincrement())
  email      String      @unique
  name       String?
  password   String
  createAt   DateTime    @default(now())
  updateAt   DateTime    @updatedAt
  contacts   Contact[]
  schedulers Scheduler[]
  customers  Customer[]
  cars       Car[]
}

model Customer {
  id          Int                 @id @default(autoincrement())
  name        String
  phoneNumber String
  email       String
  career      String
  createAt    DateTime            @default(now())
  updateAt    DateTime            @updatedAt
  contacts    ContactOnCustomer[]
  user        User?               @relation(fields: [userId], references: [id])
  userId      Int?
}

model Car {
  id        Int      @id @default(autoincrement())
  name      String
  colors    String
  price     Int
  createAt  DateTime @default(now())
  updateAt  DateTime @updatedAt
  contact   Contact? @relation(fields: [contactId], references: [id])
  contactId Int?
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?
}

model Contact {
  id          Int                 @id @default(autoincrement())
  cars        Car[]
  title       String
  contents    Content[]
  createAt    DateTime            @default(now())
  updateAt    DateTime            @updatedAt
  user        User?               @relation(fields: [userId], references: [id])
  userId      Int?
  scheduler   Scheduler?          @relation(fields: [schedulerId], references: [id])
  schedulerId Int?
  priority    PRIORITY            @default(LOW)
  status      STATUS              @default(UNCOMPLETED)
  customers   ContactOnCustomer[]
}

model Content {
  id        Int      @id @default(autoincrement())
  text      String
  createAt  DateTime @default(now())
  updateAt  DateTime @updatedAt
  contact   Contact? @relation(fields: [contactId], references: [id])
  contactId Int?
}

model Scheduler {
  id             Int       @id @default(autoincrement())
  startDate      DateTime
  dueDate        DateTime
  isNotification Boolean   @default(false)
  isSeen         Boolean   @default(false)
  createAt       DateTime  @default(now())
  updateAt       DateTime  @updatedAt
  contacts       Contact[]
  user           User?     @relation(fields: [userId], references: [id])
  userId         Int?
}

model ContactOnCustomer {
  customerId Int
  customer   Customer @relation(fields: [customerId], references: [id])

  contactId Int
  contact   Contact @relation(fields: [contactId], references: [id])

  createAt DateTime @default(now())

  @@id([contactId, customerId])
}
