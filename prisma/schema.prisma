generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

enum PRIORITY {
  LOW
  MEDIUM
  HIGH
}

model User {
  id         Int         @id @default(autoincrement())
  email      String      @unique
  name       String?
  password   String
  createAt   DateTime    @default(now())
  updateAt   DateTime    @updatedAt
  contacts   Contact[]
  schedulers Scheduler[]
}

model Customer {
  id          Int      @id @default(autoincrement())
  name        String
  phoneNumber String
  email       String
  career      String
  createAt    DateTime @default(now())
  updateAt    DateTime @updatedAt
  contact     Contact? @relation(fields: [contactId], references: [id])
  contactId   Int?
}

model Car {
  id        Int      @id @default(autoincrement())
  name      String
  colors    String
  price     BigInt
  createAt  DateTime @default(now())
  updateAt  DateTime @updatedAt
  contact   Contact? @relation(fields: [contactId], references: [id])
  contactId Int?
}

model Contact {
  id          Int        @id @default(autoincrement())
  customer    Customer[]
  cars        Car[]
  title       String
  body        String
  createAt    DateTime   @default(now())
  updateAt    DateTime   @updatedAt
  user        User?      @relation(fields: [userId], references: [id])
  userId      Int?
  scheduler   Scheduler? @relation(fields: [schedulerId], references: [id])
  schedulerId Int?
  priority    PRIORITY   @default(LOW)
}

model Scheduler {
  id             Int       @id @default(autoincrement())
  startDate      DateTime
  dueDate        DateTime
  isNotification Boolean   @default(false)
  isSeen         Boolean   @default(false)
  createAt       DateTime  @default(now())
  updateAt       DateTime  @updatedAt
  contacts       Contact[]
  user           User?     @relation(fields: [userId], references: [id])
  userId         Int?
}
